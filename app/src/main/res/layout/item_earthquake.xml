<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:elevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/source_label"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Source: "/>

            <TextView
                android:id="@+id/source"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="source"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/eqid_label"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Eqid: "/>

            <TextView
                android:id="@+id/eqid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="eqid"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/timedate_label"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Timedate: "/>

            <TextView
                android:id="@+id/timedate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="timedate"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lat_label"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Lat: "/>

            <TextView
                android:id="@+id/lat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="lat"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lon_label"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Lon: "/>

            <TextView
                android:id="@+id/lon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="lon"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/magnitude_label"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Magnitude: "/>

            <TextView
                android:id="@+id/magnitude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="source"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/depth_label"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Depth: "/>

            <TextView
                android:id="@+id/depth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="depth"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/region_label"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Source: "/>

            <TextView
                android:id="@+id/region"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="region"/>

        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>

